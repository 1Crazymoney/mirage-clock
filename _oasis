OASISFormat:  0.4
Name:         mirage-clock
Version:      1.1.0
Synopsis:     Posix clocks for Mirage
Authors:      Anil Madhavapeddy, Daniel C. BÃ¼nzli, Matthew Gray
License:      ISC
Plugins:      META (0.4), DevFiles (0.4)
BuildTools:   ocamlbuild

Flag unix
  Description:  true to build Unix library
  Default:      true

Flag xen
  Description:  true to build Xen library
  Default:      false

Library "mirage-clock-unix"
  Build$:         flag(unix)
  CompiledObject: best
  Path:           unix
  Modules:        Pclock, Mclock
  CSources:       clock_stubs.c
  CCOpt:          -O2 -g -Wall
  Findlibname:    mirage-clock-unix
  BuildDepends:   mirage-types

Library "mirage-clock-xen"
  Build$:         flag(xen)
  CompiledObject: best
  Path:           xen
  Modules:        Pclock, Mclock
  Findlibname:    mirage-clock-xen
  BuildDepends:   mirage-types

Executable "portable"
  Build$:         flag(unix)
  CompiledObject: best
  Install:        false
  Path:           lib_test
  MainIs:         portable.ml
  BuildDepends:   mirage-clock-unix, cstruct, mirage-types

Test "portable-test"
  Command:          $portable
  WorkingDirectory: lib_test
